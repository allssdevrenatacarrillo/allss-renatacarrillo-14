<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_custom" model="ir.ui.view">
        <field name="name">Comissão</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="string">Comissão</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_supplier_tree_custom" model="ir.ui.view">
        <field name="name">Comissão</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="string">Comissão</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_tax']" position="after">
                <field name="name" string="Comissão"/>
            </xpath>
        </field>
    </record>
</odoo>